{
  "version": "0.0.0-development",
  "name": "npm-package-generator",
  "description": "an opinionated npm package template",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://github.com/ahmadnassri/npm-package-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmadnassri/npm-package-generator.git"
  },
  "license": "ISC",
  "main": "lib/generator.js",
  "bin": {
    "npm-package-generator": "lib/bin.js"
  },
  "keywords": [
    "npm",
    "package",
    "generator"
  ],
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib",
    "src",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/npm-package-generator/issues"
  },
  "scripts": {
    "compile": "babel -q src",
    "test": "BABEL_ENV=test tap test --reporter spec --node-arg=--require --node-arg=babel-register",
    "pretest": "snazzy && echint",
    "coverage": "BABEL_ENV=test tap test --reporter silent --coverage --nyc-arg=--require --nyc-arg=babel-register",
    "codeclimate": "BABEL_ENV=test tap --coverage-report=text-lcov | codeclimate-test-reporter",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "standard": {
    "ignore": [
      "lib/**",
      "template/**"
    ]
  },
  "echint": {
    "ignore": [
      "lib/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "0.0.9",
    "babel-register": "^6.18.0",
    "codeclimate-test-reporter": "^0.4.0",
    "cz-conventional-changelog": "^1.2.0",
    "echint": "^2.1.0",
    "fs-readfile-promise": "^3.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "snazzy": "^5.0.0",
    "tap": "^8.0.1"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "dotenv": "^2.0.0",
    "fs-writefile-promise": "^2.0.0",
    "glob-promise": "^2.0.0",
    "lodash.template": "^4.4.0",
    "mkdirp-promise": "^4.0.1",
    "read-files-promise": "^1.1.1"
  }
}
