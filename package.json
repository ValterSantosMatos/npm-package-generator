{
  "name": "npm-package-generator",
  "description": "an opinionated npm package template",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://github.com/ahmadnassri/npm-package-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmadnassri/npm-package-generator.git"
  },
  "license": "ISC",
  "main": "lib/generator.js",
  "bin": {
    "npm-package-generator": "lib/bin.js"
  },
  "keywords": [
    "npm",
    "package",
    "generator"
  ],
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib",
    "src",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/npm-package-generator/issues"
  },
  "scripts": {
    "compile": "babel -q src",
    "test": "BABEL_ENV=test tap test/*.js --node-arg=--require --node-arg=babel-register | tap-mocha-reporter spec",
    "pretest": "standard && echint",
    "coverage": "BABEL_ENV=test tap test/*.js --coverage --nyc-arg=--require --nyc-arg=babel-register",
    "codeclimate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "standard": {
    "ignore": [
      "lib/**",
      "template/**"
    ]
  },
  "echint": {
    "ignore": [
      "lib/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-plugin-add-module-exports": "*",
    "babel-plugin-transform-runtime": "*",
    "babel-preset-es2015": "*",
    "babel-preset-es2015-node4": "*",
    "babel-preset-es2015-node5": "*",
    "babel-preset-es2015-node6": "*",
    "codeclimate-test-reporter": "0.3.3",
    "cz-conventional-changelog": "^1.1.6",
    "echint": "^1.5.3",
    "fs-readfile-promise": "^3.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.3",
    "semantic-release": "^4.3.5",
    "standard": "^7.1.2",
    "tap": "^5.7.0",
    "tap": "^6.2.0",
    "tap-mocha-reporter": "0.0.26"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "dotenv": "^2.0.0",
    "fs-writefile-promise": "^1.0.3",
    "glob-promise": "^1.0.6",
    "lodash.template": "^4.2.5",
    "mkdirp-promise": "^2.0.0",
    "read-files-promise": "^1.1.1"
  }
}
